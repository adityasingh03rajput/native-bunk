<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_fingerprint"
        android:layout_marginBottom="32dp"
        android:contentDescription="Fingerprint icon" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biometric Authentication"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/instructionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose your preferred authentication method"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginBottom="40dp"
        android:textColor="#666666" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="🔐 Fingerprint Authentication"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_primary"
        android:textColor="@android:color/white"
        android:elevation="4dp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="📷 Face Authentication"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_secondary"
        android:textColor="@color/primary_color"
        android:elevation="4dp" />

    <Button
        android:id="@+id/faceRegisterButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="📷 Register Face"
        android:textSize="16sp"
        android:visibility="gone"
        android:background="@drawable/button_primary"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp" />

</LinearLayout>