{
  "name": "college-attendance-admin",
  "version": "1.0.0",
  "description": "College Attendance Management System - Admin Panel",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win --x64",
    "build-installer": "electron-builder --win --x64 --config electron-builder.json"
  },
  "author": "College Attendance System",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "build": {
    "appId": "com.college.attendance.admin",
    "productName": "College Attendance Admin",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "College Attendance Admin",
      "license": "LICENSE.txt"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/electron-squirrel-startup/**/*"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
